#!/bin/bash

POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
OUTPUT_DIR="pokemon_data"
ERROR_LOG="errors.txt"

mkdir -p "$OUTPUT_DIR"

fetch_pokemon() {
    name="$1"
    FILE="$OUTPUT_DIR/${name}.json"
    if curl -s -f "https://pokeapi.co/api/v2/pokemon/$name" -o "$FILE"; then
        echo "Saved data to $FILE âœ…"
    else
        echo "Failed to fetch $name at $(date)" >> "$ERROR_LOG"
    fi
}

# Store background process PIDs
PIDS=()

for name in "${POKEMON_LIST[@]}"; do
    echo "Fetching data for $name..."
    fetch_pokemon "$name" &
    PIDS+=($!)  # Store PID
done

# Optional: Show how to kill a background job if needed
for pid in "${PIDS[@]}"; do
    if ! wait "$pid"; then
        echo "Process $pid failed. Killing it if still running..."
        kill "$pid" 2>/dev/null
    fi
done
